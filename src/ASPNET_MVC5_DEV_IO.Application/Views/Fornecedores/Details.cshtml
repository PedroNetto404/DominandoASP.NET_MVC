@model ASPNET_MVC5_DEV_IO.Application.ViewModels.FornecedorViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Detalhes do Fornecedor";
}

<h2>@ViewBag.Title</h2>

<hr/>

<div class="row">
    <h4>Informação somente leitura</h4>
    <hr/>
    <dl class="row">
        <div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </div>

        <div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Documento)
            </dd>
        </div>

        <div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </div>
    </dl>
</div>
<div class="row">
    <a href="@Url.Action("Edit", "Fornecedores", new {id = Model.Id})" class="btn btn-primary">Editar</a>
    <a href="@Url.Action("Index", "Fornecedores")" class="btn btn-info">Voltar</a>
</div>